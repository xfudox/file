{
    "name": "xfudox/file",
    "description": "File handling.",
    "authors": [
        {
            "name":  "Silvio Gratani",
            "email": "silvio.gratani@gmail.com",
            "role":  "Developer"
        }
    ],
    "require": {
        "php": ">=7.4.3"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "mockery/mockery": "^1.3",
        "orchestra/testbench": "^5.1"
    },
    "autoload": {
        "psr-4": {
            "xfudox\\File\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "xfudox\\File\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "php vendor/phpunit/phpunit/phpunit",
        "test-f": "php vendor/phpunit/phpunit/phpunit --filter"
    }
}
